{
  "settings": {},
  "rules": [
    {
      "patterns": [
        ".*"
      ],
      "properties": {
        "context": "default",
        "uri": "hotwire://fragment/web",
        "fallback_uri": "hotwire://fragment/web",
        "pull_to_refresh_enabled": false
      }
    },
    {
      "patterns": [
        "^/dashboard$",
        "^/settings$"
      ],
      "properties": {
        "uri": "hotwire://fragment/web/home",
        "pull_to_refresh_enabled": false
      }
    },
    {
      "patterns": [
        "^/settings/.+"
      ],
      "properties": {
        "context": "modal",
        "uri": "hotwire://fragment/web",
        "pull_to_refresh_enabled": false,
        "presentation": "modal"
      }
    },
    {
      "patterns": [
        "/login"
      ],
      "properties": {
        "uri": "hotwire://fragment/web",
        "pull_to_refresh_enabled": false
      }
    },
    {
      "patterns": [
        "/create$",
        "/edit$",
        "/delete$"
      ],
      "properties": {
        "context": "modal",
        "uri": "hotwire://fragment/web/modal/sheet",
        "pull_to_refresh_enabled": false
      }
    }
  ]
}
